  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>Editing Book</h2>
<%= form_with(model: @book, local: true) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<span>
  <%= link_to 'Show', book_path(@book), class: "mr-2" %> | <%= link_to 'Back', books_path, class: "ml-2" %>
</span>
