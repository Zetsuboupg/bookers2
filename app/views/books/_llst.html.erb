<style>
  .create-book-button {
    background-color: #006400; /* 暗い緑色に設定 */
    color: white; /* 文字色を白に設定 */
    border: none; /* 枠線なし */
    border-radius: 5px; /* 角丸にする */
    padding: 8px 13px; /* ボタンの内側の余白 */
    font-size: 16px; /* 文字サイズ */
    cursor: pointer; /* カーソルをポインターに変更 */
    /* その他のスタイルも必要に応じて指定 */
  }
</style>



<div>
  <h1>New book</h1>
  <%= form_with(model: book, local: true) do |form| %>
    <div class="form-group row">
      <div class="col-md-4"> <!-- 幅を1/3にする -->
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-4"> <!-- 幅を1/3にする -->
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.submit 'Create Book', class: 'create-book-button' %>
    </div>
  <% end %>
</div>
